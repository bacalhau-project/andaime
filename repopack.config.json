  "_license": "Licensed under the Apache2/MIT License",
  "_path": "repopack.config.json",
  "output": {
    "filePath": "repopack-focused.txt"
  },
  "include": [
    "pkg/providers/*.go",
    "pkg/models/*.go",
    "cmd/**/*.go"
  ],
  "exclude": [
    "vendor/*",
    "node_modules/*",
    "dist/*",
    "build/*",
    "tmp/*",
    "temp/*",
    "logs/*",
    "coverage/*",
    "test/*",
    "tests/*",
    "__tests__/*",
    "__mocks__/*",
    "mocks/*",
    "docs/*",
    "examples/*",
    "scripts/*",
    ".git/*",
    ".github/*",
    ".vscode/*",
    ".idea/*"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "*.md",
      "*.txt",
      "*.log",
      "*.yaml",
      "*.yml",
      "*.toml",
      "*.mod",
      "*.sum"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}